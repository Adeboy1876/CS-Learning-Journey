@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="()=>currentCount++">Increament</button>
<button class="btn btn-primary" @onclick="DecreamentCount">Decreament</button>
<button class="btn btn-primary" @onclick="ResetCount">Reset</button>
<br />

<!-- <p>Enter a strating number</p>
<input @bind="startingNumber" type="number" /> -->

<div class="m-1">#
    input your text
    <input type="text" @onended="OnEnded" />
    <p>@text</p>
</div>

<div class="m-2">
    <input type="text" @onfocus="HandleFocus" @onblur="HandleBlur" @onmouseover="MouseOver" @onmouseout="MouseOut" />
    <p>@text1</p>
</div>

@code {
    private int currentCount = 0;
    private int startingNumber = 0;
    string text = "";
    string text1 = "";

    /*   private void IncrementCount()
           {
           currentCount++;
       }*/
    private void DecreamentCount(MouseEventArgs e)
    {
        currentCount--;
    }
    private void ResetCount(MouseEventArgs e)
    {
        currentCount = startingNumber;
    }
    private void HandleInput(ChangeEventArgs e)
    {
        text = (string)e.Value;
    }
    private void OnKeyDown(KeyboardEventArgs e)
    {
        text = (string)e.Key;
    }
    private void OnEnded(EventArgs e)
    {
        text = "Ended";
    }
    private void HandleFocus(FocusEventArgs e)
    {
        text1 = "This div is focused";
    }
    private void HandleBlur(FocusEventArgs e)
    {
        text1 = "This div is NOT focused";
    }
    private void MouseOver(MouseEventArgs e)
    {
        text1 = "Youre hovering over this div";
    }
    private void MouseOut(MouseEventArgs e)
    {
        text1 = "";
    }
}
